<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CategoryStyle">
        <item name="android:layout_height">88dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="row_choices">
        <item name="android:paddingTop">@dimen/board_margin</item>
        <item name="android:background">@color/category_meanings</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:baselineAligned">false</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">@dimen/board_margin</item>
        <item name="android:layout_marginRight">@dimen/board_margin</item>
    </style>

    <style name="choice_frame">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="choice">
        <item name="android:layout_width">@dimen/choice_size</item>
        <item name="android:layout_height">@dimen/choice_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <style name="satisfaction" parent="choice_frame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/board_margin</item>
        <item name="android:layout_marginRight">@dimen/board_margin</item>
        <item name="android:padding">16dp</item>
    </style>
</resources>
